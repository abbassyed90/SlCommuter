<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/toolbar"
        android:subtitleTextColor="@android:color/white"
        android:titleTextColor="@android:color/white"
        app:layout_scrollFlags="scroll|enterAlways" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:paddingBottom="@dimen/default_margin"
        android:paddingTop="@dimen/default_margin">

        <TextView
            android:id="@+id/departureTextView"
            style="@style/trip_detail_textview"
            android:drawableTop="@drawable/ic_access_time_white_24dp" />

        <TextView
            android:id="@+id/arrivalTextView"
            style="@style/trip_detail_textview"
            android:drawableTop="@drawable/ic_access_time_white_24dp" />


        <TextView
            android:id="@+id/changesTextView"
            style="@style/trip_detail_textview"
            android:drawableTop="@drawable/ic_shuffle_white_24dp" />


        <TextView
            android:id="@+id/durationTextView"
            style="@style/trip_detail_textview"
            android:drawableTop="@drawable/ic_access_time_white_24dp" />


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/default_margin"
            android:background="@color/blue_grey" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/shareButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/default_margin"
            android:layout_marginRight="@dimen/default_margin"
            android:src="@drawable/ic_share_white_24dp" />

    </FrameLayout>


</LinearLayout>