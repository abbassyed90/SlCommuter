<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/preference_title_notification">

        <CheckBoxPreference
            android:key="@string/key_notification_show"
            android:title="@string/title_checkbox_notification_show"
            android:defaultValue="@bool/default_show_notification_value"/>

        <CheckBoxPreference
            android:key="@string/key_notification_sound"
            android:title="@string/title_checkbox_notification_sound"
            android:defaultValue="@bool/default_sound_notification_value"/>

        <CheckBoxPreference
            android:key="@string/key_notification_vibrate"
            android:title="@string/title_checkbox_notification_vibrate"
            android:defaultValue="@bool/default_vibrate_notification_value"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/preference_title_data"
        >

    <Preference android:title="@string/title_clear_data"
        android:key="clearButton"/>

    </PreferenceCategory>
</PreferenceScreen>